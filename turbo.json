{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        ".next/**",
        "dist/**",
        "!.next/cache/**"
      ],
      "inputs": [
        "src/**",
        "public/**",
        "next.config.js",
        "package.json",
        "tsconfig.json",
        "pnpm-lock.yaml",
        "../../packages/**",
        "../../turbo.json"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "clean": {
      "cache": false
    }
  }
}