{
    "app": "npx ts-node --prefer-ts-exts bin/infra.ts",
    "watch": {
        "include": [
            "**"
        ],
        "exclude": [
            "node_modules",
            "cdk.out"
        ]
    },
    "context": {
        "@aws-cdk/aws-apigateway:usagePlanKeyOrderInsensitiveId": true,
        "@aws-cdk/aws-rds:lowercaseDbIdentifier": true,
        "@aws-cdk/aws-lambda:recognizeCfnTemplateContentOnly": true,
        "@aws-cdk/core:checkSecretUsage": true,
        "@aws-cdk/core:target-partitions": [
            "aws",
            "aws-cn"
        ],
        "@aws-cdk-containers/ecs-service-extensions:enableDefaultLogDriver": true,
        "@aws-cdk/aws-ec2:uniqueImdsv2TemplateName": true,
        "@aws-cdk/aws-iam:minimizePolicies": true,
        "@aws-cdk/aws-sqs:enableDcps": true,
        "@aws-cdk/core:applyCloudFormationTagsToStack": true,
        "@aws-cdk/aws-s3:grantWriteWithoutAcl": true,
        "@aws-cdk/aws-ecs:arnFormatIncludesClusterName": true,
        "@aws-cdk/aws-iam:importedRoleStackId": true,
        "@aws-cdk/aws-lambda:scopePrivateDirectories": true,
        "@aws-cdk/aws-sns:allowSdps": true,
        "@aws-cdk/aws-secretsmanager:use=": true,
        "@aws-cdk/aws-efs:defaultEncryptionAtRest": true,
        "@aws-cdk/aws-s3:serverAccessLogsBucketEncryption": true,
        "@aws-cdk/aws-cloudfront:defaultSecurityPolicyTLSv1.2_2021": true,
        "@aws-cdk/aws-apigateway:disableCloudWatchRole": true,
        "@aws-cdk/core:fastHoisting": true,
        "@aws-cdk/aws-lambda:migratedFunctionEnvEncrypted": true,
        "aws-cdk:enableDiffNoFail": true,
        "@aws-cdk/aws-stepfunctions:parseStateMachineDefinitionForErrorEquals": true
    }
}