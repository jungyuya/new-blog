{
  "name": "new-blog",
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=frontend --filter=backend",
    "dev": "cross-env NODE_ENV=development concurrently -k --names \"FRONTEND,BACKEND\" -c \"bgBlue.bold,bgMagenta.bold\" \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "lint": "turbo run lint",
    "clean": "turbo run clean"
  },
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@aws-sdk/client-dynamodb": "^3.859.0",
    "@aws-sdk/lib-dynamodb": "^3.859.0",
    "@opensearch-project/opensearch": "^3.5.1",
    "@types/node": "^22.17.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "ts-node": "^10.9.2",
    "turbo": "2.5.5",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "@typescript-eslint/eslint-plugin": "^8.0.0-alpha.54",
      "@typescript-eslint/parser": "^8.0.0-alpha.54"
    }
  }
}